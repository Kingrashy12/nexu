{
  "name": "nexujs",
  "version": "0.1.7",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kingrashy12/nexu.git"
  },
  "homepage": "https://github.com/Kingrashy12/nexu/tree/main/package#readme",
  "bugs": {
    "url": "https://github.com/Kingrashy12/nexu/issues"
  },
  "bin": {
    "nexujs": "./scripts/index.js"
  },
  "scripts": {
    "build": "rollup -c",
    "build:ts": "tsc",
    "start": "nodemon dist/server.js",
    "dev": "nodemon server.js",
    "dev-ts": "concurrently \"tsc --watch\" \"nodemon dist/server.js\""
  },
  "files": [
    "dist",
    "dist/types",
    "scripts"
  ],
  "keywords": [
    "express",
    "backend",
    "file-based routing",
    "nodejs",
    "routing",
    "expressjs",
    "nexu"
  ],
  "author": "Rapheal Chizitere",
  "license": "MIT",
  "description": "A lightweight Express.js library with file-based routing for modern backend development.",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "rollup": "^4.29.1",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-visualizer": "^5.13.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^13.0.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "body-parser": "^1.20.3",
    "helmet": "^8.0.0"
  }
}
